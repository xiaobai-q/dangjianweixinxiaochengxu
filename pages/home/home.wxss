.swiperContainer{
  margin-top: 15rpx;
  bottom: 8rpx;
  position: relative;
  }
  .imageContainer{
    width: 100%;
    margin-top: 10rpx;
    height: 350rpx;
  }
  .turnItem{
    height: 340rpx;
  }
  .itemImg{
    position: absolute;
    width: 99%;
    height: 300rpx;
    margin-top: 20rpx;
    border-radius: 15rpx;
  }
  .imgActive{
    opacity: 1;
    height: 340rpx;
    margin-top: 0rpx;
    transition:all .2s ease-in 0s;
  }
  /* 指示点修饰 */
  .dots{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 25rpx;
    display: flex;
    justify-content: center;
  }
  
  .dot{
    margin: 0 8rpx;
    width: 18rpx;
    height: 18rpx;
    background-color: white;
    border-radius: 8rpx;
    transition: all .5s;
  }
  .dot.active{
    width: 24rpx;
    background: #fad81e;
  }
  /*文本公共样式*/
  .box{
    display:flex;
    flex-direction: column;
  }
  .content{
    background: -webkit-linear-gradient(top,#f1c38ef3,#f3eee7f3,white)
  }
  .head{
    display: flex;
    height: 80rpx;
    width: 99%;
    border: 1px solid hsla(15, 22%, 96%, 0.945);
    /*边框圆角*/
    border-radius: 8rpx;
    /*渐变色背景*/
  }
  .box_text{
    border: 1px solid rgb(214, 213, 213); 
    left: 0.5%;
    right: 0.5%;
    height: 40rpx;
    /*使两个view同行排列*/
    display: flex;
    flex-flow: row nowrap;
    border-radius: 8rpx;
  }
  .t1{
    width: 78%;
    font-size: small;
    white-space: nowrap; /*超出的空白区域不换行*/
    overflow: hidden; /*超出隐藏*/
    text-overflow: ellipsis;
  }
  .t2{
    font-size: small;
    color: #a3a1a1;
  }
  /*学习路上-标题*/
  .img_0{
    position: relative;
    height: 45px;
    width:50px ;
    padding-bottom: 30%;
  }
  .text_0_1{
    position: relative;
    padding-top: 20rpx;
    font-weight: 1000;
    color:black;
  }
  .text_0_2{
    position: absolute;
    right: 5%;
    padding-top: 12px;
    font-weight: 400;
    font-size: 12;
    color:#535151f3;
  }
/*法制园地-标题*/
