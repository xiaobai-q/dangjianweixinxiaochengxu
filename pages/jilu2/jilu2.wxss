.bg{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:url('https://636c-cloud1-3g3t2s71a5090705-1306746920.tcb.qcloud.la/logo/bg2.png') 
  no-repeat #fff;
  background-size:cover;
  z-index:-1;
  } 
  .bg-img{
    width : 100%;
    height : 100%;
  }
  .title{
    display: flex;
    height: 100rpx;
    background-color: rgb(204, 69, 35);
    margin-bottom: 10px;
    flex-direction: column;
    justify-content: space-around;
  }
  .delete{
    position: absolute;
    padding: 2% 2% 2% 2%;
    left: 5%;
    font-weight: 400;
    font-size: medium;
    color:#faf8f8f3;
    border-radius: 15rpx;
    border: 1px solid rgb(241, 151, 47);
    background-color: rgb(241, 151, 47);
  }
  .right{
    position: absolute;
    right: 5%;
    font-weight: 400;
    font-size: small;
    color:#faf8f8f3;
  }
  .body{
    position: absolute;
    height: 88%;
    width: 96%;
    left: 2%;
    border-radius: 8px;
    border: 2px solid rgb(204, 69, 35);
  }
.text{
  font-size: x-large;
}
