/* pages/paihang/paihang.wxss */
.bg{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:url('https://636c-cloud2-9g3l5j7l21abb9a1-1307223493.tcb.qcloud.la/logo/bg2.png') 
  no-repeat #fff;
  background-size:cover;
  z-index:-1;
  } 
  .bg-img{
    width : 100%;
    height : 100%;
  }
  .title{
    display: flex;
    height: 100rpx;
    background-color: rgb(204, 69, 35);
    margin-bottom: 10px;
  }
  .left{
    position: relative;
    left: 1.5%;
    padding-top: 14px;
    font-weight: 1000;
    color:rgb(253, 176, 61);
  }
  .right{
    position: absolute;
    right: 5%;
    padding-top: 17px;
    font-weight: 400;
    font-size: small;
    color:#faf8f8f3;
  }
  .warning{
    margin-top: 1%;
    text-align: center;
    color: rgb(169, 170, 170);
  } 
  .show{
    margin-top: 5rpx;
  }
  .font{
    display: flex;
  }
  .time{
    font-size: large;
    font-weight: 600;
    margin-right: 6px;
    margin-bottom: 8px;
    text-align: right;
    color: rgb(204, 69, 35);
  }
  .line{
    height: 1px;
    margin-bottom: 10px;
    padding-bottom: 0%;
    background-color: rgba(209, 209, 209, 0.945);
  }
  .num{
    border: 3px solid rgb(204, 69, 35);
    line-height: 40rpx;
    text-align: center;
    height: 40rpx;
    width: 40rpx;
    border-radius: 50%;
    margin-left: 1%;
    font-size: large;
    font-weight: 600;
    color:rgb(204, 69, 35) ;
  }
  .username{
    color: #4e4d4d;
    font-weight: 600;
    font-size: medium;
    text-align: left;
    margin-bottom: 10px;
    margin-left: 5px;
  }