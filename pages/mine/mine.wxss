  }
.head{
  display:flex;
  flex-direction: column;
  height: 400rpx;
  align-items: center;
}
.login_btn{
  margin-top: 100rpx;
}
.login_out{
  font-size: 33rpx;
  color: gray;
  margin-top: 20rpx;
}
.touxiang{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.right_arrow{
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.item{
  position: relative;
  opacity: 0.7;
  padding: 25rpx;
  height: 40rpx;
  display: flex;
  background: white;
  align-items: center;
  border-bottom: 1px solid gainsboro;
}
.text{
  position: relative;
  left: 25rpx;
}
.button{
  position: fixed;
  width: 100%;
  left: 25rpx;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
}
.button::after{
  border: none;
  border-radius: 0rpx;
}
