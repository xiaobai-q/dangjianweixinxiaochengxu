<!--背景图片-->
<view class="bg" style="opacity:{{1}}">
  <image class="bg-image" mode="scaleToFill"></image>
</view>
<view class="head">
  <image class="touxiang" src="{{upsrcfile}}" bindtap="chooseImg"></image>
  <text class="nicheng">你好，{{userName}}！</text>
  <text class="login_out" bindtap="loginOut">退出登录</text>
</view>
  <view class="item" bindtap="error">
    <text>错题集</text>
    <view class="right_arrow"></view>
  </view>
  <view class="item" bindtap="biji">
    <text>学习笔记</text>
    <view class="right_arrow"></view>
  </view>
  <view class="item" bindtap="paihangbang">
    <text>排行榜</text>
    <view class="right_arrow"></view>
  </view>
<view class="item">
  <button class="button" open-type="feedback">反馈建议</button>
  <view class="right_arrow"></view>
</view>
<view class="item">
  <button class="button" open-type="contact">在线客服</button>
  <view class="right_arrow"></view>
</view>